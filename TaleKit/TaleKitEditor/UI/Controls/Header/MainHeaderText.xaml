<UserControl x:Class="TaleKitEditor.UI.Controls.MainHeaderText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaleKitEditor.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="300" Height="30">
	<TextBlock Text="{Binding Text, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" Style="{StaticResource MainHeaderText}" VerticalAlignment="Center" Margin="8,0" HorizontalAlignment="Left"/>
</UserControl>
