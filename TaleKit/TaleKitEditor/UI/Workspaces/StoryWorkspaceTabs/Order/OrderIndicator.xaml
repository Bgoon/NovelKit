<UserControl x:Class="TaleKitEditor.UI.Workspaces.StoryWorkspaceTabs.OrderIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="18" Margin="0, 4, 0, 0">
	<DockPanel>
		<Border DockPanel.Dock="Top" Name="IndicatorShape" Width="8" Height="8" CornerRadius="4" Background="#FFFF7373" Margin="0" HorizontalAlignment="Center" ClipToBounds="False"/>
		<TextBlock DockPanel.Dock="Bottom" Name="CountTextBlock" Text="1" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontFamily="/TaleKitEditor;component/Resources/Fonts/#AppleSDGothicNeoEB00" TextOptions.TextHintingMode="Animated" Padding="2,0" Margin="0"/>
	</DockPanel>
</UserControl>
